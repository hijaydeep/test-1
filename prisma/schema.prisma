generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int      @id @default(autoincrement())
  fullName String
  company  String
  username String
  country  String
  contact  String
  email    String
  status   String
}

model nmu {
  id               Int      @id @default(autoincrement())
  topic            String
  source           String
  author           String
  thumbnail        String?
  youtubeLink      String?
  shortDescription String
  longDescription  String
  createdAt        DateTime @default(now())
}

model condition {
  id               Int      @id @default(autoincrement())
  topic            String
  name             String
  description      String
  topicDescription String?
  status           String
  createdAt        DateTime @default(now())
}
